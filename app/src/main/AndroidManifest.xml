<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pickleindia.pickle">

    <application
        android:name=".Pickle"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".testActivity">

        </activity>
        <activity
            android:name=".DeveloperProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splash.OnBoardingActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".auth.Login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".auth.Login.OtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".auth.Login.CustomerDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.MainActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="pickleindiaofficial.com"
                    android:scheme="http" />
                <data
                    android:host="pickleindiaofficial.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".empty.EmptyActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.FirebaseSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing|stateAlwaysVisible" />
        <activity
            android:name=".cart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.AddNewItemActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".address_book.AddressBookFragment"
            android:screenOrientation="portrait">


        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>