<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pickleindia.pickle.navigation.HomeFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_nav_menu_sub_orders"
            app:destination="@id/nav_menu_sub_orders" />
        <action
            android:id="@+id/action_homeFragment_to_addressBookFragment"
            app:destination="@id/addressBookFragment" />
        <action
            android:id="@+id/action_homeFragment_to_rewardFragment"
            app:destination="@id/rewardFragment" />
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.pickleindia.pickle.product.ProductsFragment"
        android:label="fragment_fruits"
        app:popUpTo="@+id/homeFragment"
        tools:layout="@layout/fragment_products"/>
    <fragment
        android:id="@+id/offerFragment"
        android:name="com.pickleindia.pickle.navigation.OfferFragment"
        android:label="fragment_offer"
        app:popUpTo="@+id/homeFragment"
        tools:layout="@layout/fragment_offer" />
    <fragment
        android:id="@+id/nav_menu_sub_orders"
        android:name="com.pickleindia.pickle.orders.OrdersPlacedFragment"
        android:label="fragment_orders_placed"
        app:popUpTo="@+id/homeFragment"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/addressBookFragment"
        android:name="com.pickleindia.pickle.address_book.AddressBookFragment"
        android:label="AddressBookFragment" />
    <fragment
        android:id="@+id/rewardFragment"
        android:name="com.pickleindia.pickle.reward.RewardFragment"
        android:label="RewardFragment" />
</navigation>