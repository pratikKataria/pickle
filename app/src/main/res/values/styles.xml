<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/avenir_next_medium</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="elegentButton" >
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textCursorDrawable">@color/darkBlue</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@color/textBoxBackground</item>
    </style>


    <style name="loginEditTextStyle" parent="editTextStyle">
        <item name="android:inputType">number</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>


    <style name="MyCustomRadioButton" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomerDetailRadioButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/state_cstm_dtl_text_color</item>
        <item name="android:background">@drawable/state_cstm_dtl_bg_selector</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyCustomRadioButtonAddNew" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Custom.Search.Filter" parent="@android:style/TextAppearance">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Cart.IncDec.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">12dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="paddingStart">6dp</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="Widget.Cart.Add.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">16dp</item>
        <item name="iconGravity">end</item>
        <item name="cornerRadius">4dp</item>
        <item name="icon">@drawable/ic_add_black_24dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/secondaryColorLight</item>
        <item name="iconTint">@color/secondaryColorDark</item>
        <item name="strokeColor">@color/secondaryColorLight</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
