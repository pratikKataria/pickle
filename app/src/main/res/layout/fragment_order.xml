<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OrderFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/fragment_order_ctb"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:expandedTitleGravity="center"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/fragment_order_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleMargin="18dp"
                style="@style/ToolbarTheme"
                app:menu="@menu/menu_main"
                app:layout_collapseMode="pin"
                android:background="@color/bottomNavigation"
                app:layout_constraintTop_toTopOf="parent"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/fragment_order_cv_offers_viewer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                app:fillColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/fragment_order_toolbar"
                app:pageColor="@color/darkBlue"
                app:radius="4dp"
                app:slideInterval="3000"
                tools:layout_editor_absoluteX="0dp"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap"/>



            <TextView
                android:id="@+id/textView2"
                android:layout_width="109dp"
                android:layout_height="45dp"
                android:layout_marginTop="300dp"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:text="category"
                android:textAllCaps="true"
                android:textSize="19dp"

                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="78dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="300dp"
                android:fontFamily="@font/avenir_next_demi_bold"
                android:text="category"
                android:textAllCaps="true"
                android:textSize="19dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:layout_editor_absoluteX="117dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/pacifico_regular"
                android:text="category"
                android:textAllCaps="true"
                android:textSize="19dp"
                android:layout_marginTop="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="100dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>







</androidx.coordinatorlayout.widget.CoordinatorLayout>