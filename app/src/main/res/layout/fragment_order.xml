<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OrderFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/menu_main"
        android:background="@color/bottomNavigation"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/fragment_order_cv_offers_viewer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="12dp"
        app:fillColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/fragment_order_toolbar"
        app:pageColor="@color/darkBlue"
        app:radius="4dp"
        app:slideInterval="3000"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>