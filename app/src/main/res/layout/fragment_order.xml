<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OrderFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragment_order_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/fragment_order_ctb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomNavigation"
            android:fitsSystemWindows="true"
            app:expandedTitleGravity="end"
            app:expandedTitleMarginBottom="280dp"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="58dp">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/fragment_order_cv_offers_viewer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="120dp"
                    app:fillColor="@color/white"
                    app:pageColor="@color/darkBlue"
                    app:radius="4dp"
                    app:slideInterval="3000"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"/>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/fragment_order_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleMargin="18dp"
                style="@style/ToolbarTheme"
                app:menu="@menu/menu_main"
                app:layout_collapseMode="pin"
                android:background="@color/bottomNavigation"
                app:layout_constraintTop_toTopOf="parent">
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_order_ll_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:animateLayoutChanges="true"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_demi_bold"
                        android:text="category"
                        android:textAllCaps="true"
                        android:textSize="19dp" />

                    <ImageButton
                        android:id="@+id/fragment_order_ib_hide_grid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="center"
                        android:src="@drawable/ic_up" />
                </LinearLayout>

                <GridView
                    android:id="@+id/fragment_order_gv_category_images"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:columnWidth="90dp"
                    android:verticalSpacing="60dip"
                    android:horizontalSpacing="10dip"
                    android:stretchMode="columnWidth">
                </GridView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>







</androidx.coordinatorlayout.widget.CoordinatorLayout>