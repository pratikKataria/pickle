<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
        <import type="android.view.View"/>
        <import type="com.example.pickle.utils.PriceFormatUtils"/>

        <variable
            name="product"
            type="com.example.pickle.data.ProductModel" />
        
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_view_iv_product_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:imageResourceAdapter="@{product.itemThumbImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_view_tv_name" />

            <TextView
                android:id="@+id/card_view_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/card_view_iv_product_image"
                android:padding="4dp"
                android:text="@{product.itemName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/card_view_iv_product_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_view_iv_base_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@{PriceFormatUtils.getStringFormattedPrice(product.itemBasePrice)}"
                app:layout_constraintStart_toStartOf="@+id/card_view_tv_name"
                app:layout_constraintTop_toBottomOf="@+id/card_view_tv_name"
                app:strikeThrough="@{product.itemSellPrice > 0}" />

            <TextView
                android:id="@+id/card_view_iv_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@{PriceFormatUtils.getStringFormattedPrice(product.itemSellPrice)}"
                app:layout_constraintStart_toStartOf="@+id/card_view_iv_base_price"
                app:layout_constraintTop_toBottomOf="@+id/card_view_iv_base_price" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_iv_sell_price">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{product.showAddButton()? View.VISIBLE : View.GONE}">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/decreaseCartItem"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="32dp"
                        android:layout_height="44dp"
                        app:icon="@drawable/ic_remove"
                        app:iconSize="12dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        app:rippleColor="@color/white"
                        app:cornerRadius="4dp"
                        android:backgroundTint="@color/customerDetailRadioUnSelected"
                        app:iconTint="@color/customerDetailRadioSelected"
                        app:strokeColor="@color/white"/>

                    <TextView
                        android:id="@+id/qtyCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="@{String.valueOf(product.quantityCounter)}" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/increaseCartItem"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="32dp"
                        android:layout_height="44dp"
                        android:backgroundTint="@color/customerDetailRadioSelected"
                        app:strokeColor="@color/white"
                        app:cornerRadius="4dp"
                        app:iconSize="12dp"
                        app:iconTint="@color/white"
                        android:paddingStart="10dp"
                        app:icon="@drawable/ic_add_black_24dp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_to_cart_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:paddingEnd="4dp"
                    android:text="Add"
                    android:textColor="@color/customerDetailRadioSelected"
                    app:backgroundTint="@color/customerDetailRadioUnSelected"
                    app:icon="@drawable/ic_add_black_24dp"
                    app:iconGravity="end"
                    app:iconPadding="12dp"
                    app:rippleColor="@color/white"
                    app:iconTint="@color/customerDetailRadioSelected"
                    app:strokeColor="@color/white"
                    android:visibility="@{product.showAddButton() ? View.GONE : View.VISIBLE}"/>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
