<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.pickleindia.pickle.main.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/avenir_next_bold"
            android:text="Follow us"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="@dimen/follow_us_icon_size"
            android:layout_height="@dimen/follow_us_icon_size"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_facebook"
            app:layout_constraintBottom_toBottomOf="@+id/insta_button"
            app:layout_constraintEnd_toStartOf="@+id/insta_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/insta_button" />

        <ImageButton
            android:id="@+id/twitter_button"
            android:layout_width="@dimen/follow_us_icon_size"
            android:layout_height="@dimen/follow_us_icon_size"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_twitter"
            app:layout_constraintBottom_toBottomOf="@+id/insta_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/insta_button"
            app:layout_constraintTop_toTopOf="@+id/insta_button" />

        <ImageButton
            android:id="@+id/insta_button"
            android:layout_width="@dimen/follow_us_icon_size"
            android:layout_height="@dimen/follow_us_icon_size"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_insta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/twitter_button"
            app:layout_constraintStart_toEndOf="@+id/facebook_button"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>