<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewpager.CurrentLocationFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_current_location"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="location_anim.json"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finding Location"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/location_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:text="Location Found"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Update"
        android:alpha="0"
        android:layout_marginTop="14dp"
        android:textAllCaps="false"
        android:layout_gravity="center"/>
    

</LinearLayout>