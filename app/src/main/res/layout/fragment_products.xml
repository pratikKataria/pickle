<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>
      <import type="java.util.List"/>
      <import type="com.example.pickle.models.ProductModel"/>

      <import type="android.app.Activity" />

      <variable
          name="activity"
          type="Activity" />

      <variable
          name="productList"
          type="List&lt;ProductModel>" />

      <variable
          name="cartViewModel"
          type="com.example.pickle.cart.CartViewModel" />

      <variable
          name="bundle"
          type="android.os.Bundle" />
   </data>

   <androidx.coordinatorlayout.widget.CoordinatorLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context=".activity.main.ProductsFragment"
       android:orientation="vertical">

      <com.google.android.material.appbar.AppBarLayout
          android:id="@+id/appBarLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_collapseMode="parallax"
             android:background="@color/colorGrey50"
             app:layout_scrollFlags="scroll|enterAlways|snap">


            <androidx.cardview.widget.CardView
                android:id="@+id/searchCardview"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/colorGrey100"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton4"
                app:layout_constraintTop_toTopOf="@+id/imageButton4">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end|center"
                   android:layout_marginEnd="16dp"
                   android:src="@drawable/ic_search" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="start|center"
                   android:layout_marginStart="16dp"
                   android:text="search here"
                   android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageButton4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/colorGrey100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
               <ImageButton
                   android:id="@+id/imageButton3"
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:background="?attr/selectableItemBackgroundBorderless"
                   android:onClick="@{() -> activity.onBackPressed()}"
                   android:src="@drawable/ic_arrow_left" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewFruits"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_margin="12dp"
                android:clickable="true"
                app:customBackgroundColor="@{bundle.getInt(`BACKGROUND_COLOR`)}"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton4"
                app:layout_constraintVertical_bias="0.416">

               <ImageView
                   android:id="@+id/grid_view_iv_image"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:customImageResource="@{bundle.getInt(`IMAGE_RES`)}" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                tools:text="Fruits"
                android:text="@{bundle.getString(`productsInfo`)}"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toEndOf="@+id/cardViewFruits"
                app:layout_constraintTop_toTopOf="@+id/cardViewFruits" />

            <TextView
                android:id="@+id/countFruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="24 items"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/cart_anim"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="12dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:lottie_speed="1.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:lottie_fileName="cart_added_animation.json"/>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cart_anim"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="@+id/cart_anim"
                app:layout_constraintTop_toBottomOf="@+id/ib_overlay" />

            <ImageButton
                android:id="@+id/ib_overlay"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="@+id/cart_anim"
                app:layout_constraintEnd_toEndOf="@+id/cart_anim"
                app:layout_constraintStart_toStartOf="@+id/cart_anim"
                app:layout_constraintTop_toTopOf="@+id/cart_anim" />
         </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.appbar.AppBarLayout>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/fruits_recycler_view"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginBottom="95dp"
             app:productList="@{productList}"
             app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

   </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

