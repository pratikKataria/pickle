<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login.OtpActivity">

    <ImageView
        android:id="@+id/activity_otp_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="@dimen/onBoardingImageDimen"
        android:src="@drawable/ic_get_otp_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Enter OTP"
        android:fontFamily="@font/avenir_next_demi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_otp_image" />

    <TextView
        android:id="@+id/activity_login_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="We have sent you an OTP for
phone number verification"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/activity_otp_et_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp" 
        android:hint="_\t\t\t_\t\t\t_\t\t\t_\t\t\t_\t\t\t_"
        android:textAlignment="center"
        android:maxLength="6"
        style="@style/loginEditTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_textView1" />

    <ProgressBar
        android:id="@+id/activity_otp_progress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:indeterminateTint="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="@+id/activity_otp_et_enter_otp"
        app:layout_constraintEnd_toEndOf="@+id/activity_otp_et_enter_otp"
        app:layout_constraintTop_toTopOf="@+id/activity_otp_et_enter_otp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_otp_mb_submit_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_otp_et_enter_otp" />
</androidx.constraintlayout.widget.ConstraintLayout>