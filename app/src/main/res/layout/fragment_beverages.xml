<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.util.List"/>
        <import type="com.example.pickle.data.ProductModel"/>

        <variable
            name="productList"
            type="List&lt;ProductModel>" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Main.ProductsFragment.BeveragesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/beverages_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:productList="@{productList}"
            app:category="`Beverages`"/>

    </FrameLayout>
</layout>